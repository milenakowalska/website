<%- include('partials/header.ejs') -%>


<div id='blog-main' class='my-5 p-5 container'>
    <div class='row justify-content-center'>

<h1 style="margin-top: 10px;" id='language-h1'> <%= word %> </h1>
    </div>
        <% meanings.forEach(function(meaning){ %>
            <div id='meaning'>
            <h3><%= meaning.article %> <%= meaning.word %> </h3><hr><br>
            <% if (meaning.definitions) { %>
                <% for(var i = 0; i < meaning.definitions.length; i++){ %>
                    <% if (meaning.definitions[i] !== '') { %>
                    <%= i + 1 %>. <%= meaning.definitions[i] %>
                    <br>
            <% }}}; %>
        <hr>
        </div>
        <% }) %>
        
        
        <a href='/german-article'>
            <button type="submit" class="btn btn-secondary"><< BACK </button>
        </a>
        
        <p style='color:grey'>Source: <cite>https://www.duden.de/</cite></p>
        
    

</div>
</div>



<%- include('partials/footer.ejs') -%>