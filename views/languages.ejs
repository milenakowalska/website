<%- include('partials/header.ejs') -%>

<div id='blog-main' class='px-5 container'>
    <h1 class='text-center' id='language-h1'><%= language.charAt(0).toUpperCase() + language.slice(1)%> </h1>

    <div class=row>

<% sections.forEach(function(section){ %>
    <div class='language col-lg-4 col-md-6'>
        <div class='text-center'>
            <img class='main-blog-img' style='max-height: 150px;' src="/<%= section.image_path %>">
        </div>
            <h3><%= section.title %></h3>
            <p><%= section.description %></p>
            <a target='_blank' href="<%= section.url %>">[ Go to the page ]</a>
    </div>
<% }) %>

    </div>
</div>

<%- include('partials/footer.ejs') -%>